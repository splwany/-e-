.work-list-card {
  position: relative;
  width: calc(100% - 40rpx);
  margin: 20rpx;
  border-radius: 10rpx;
  background-color: white;
}

.work-list-card .client-name {
  line-height: 100rpx;
  font-size: 50rpx;
  font-weight: bold;
  margin: 0 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.work-list-card .task-name {
  font-size: 45rpx;
  margin: 0 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.work-list-card .date {
  line-height: 100rpx;
  color: gray;
  margin: 0 20rpx;
}

.work-list-card .step {
  position: absolute;
  right: 20rpx;
  bottom: 0;
  font-size: 80rpx;
}

.add-btn {
  position: fixed;
  width: 106rpx;
  height: 106rpx;
  bottom: 8%;
  right: 5%;
  border-radius: 50%;
  background-color: var(--mainThemeColor);
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 45rpx 45rpx;
  background-image: url("data:image/png;base64,");
}

.add-btn-hover {
  background-color: #003635;
}